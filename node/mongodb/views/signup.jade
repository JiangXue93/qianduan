extends layout
block body
  form(action='/signup', method='POST')
    fieldset
      legend Signup
      p
        label First
        input(name="first", type="text")
      p
        label last
        input(name="last", type="text")
      p
        label *Email
        input(name="email", type="text")
      p
        label *Password
        input(name="password", type="text")
      p
        button Submit
      p
        a(href="/") Go back
